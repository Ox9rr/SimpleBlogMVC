@model IEnumerable<SimpleBlogMVC.Models.Article>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>DateCreation</th>
                            <th>OnHomePage</th>
                            <th>IsActive</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>DateCreation</th>
                            <th>OnHomePage</th>
                            <th>IsActive</th>
                        </tr>
                    </tfoot>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.DateCreation</td>
                                <td>@item.OnHomePage</td>
                                <td>@item.IsActive</td>
                                <td>
                                    <a asp-controller="Home" asp-action="TestGetPost" asp-route-url="@item.ArticleUrl">CheckPost</a> |
                                    @*<a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>*@
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>

<!-- Bootstrap core JavaScript-->
<script src="~vendor/jquery/jquery.min.js"></script>
<script src="~vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
